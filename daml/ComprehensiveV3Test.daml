  -- Create ownership token
  ownershipCid <- submitMulti [alice, orchestrator] [] $ createCmd AIAgentOwnershipToken with
    agentName = "TestAgent"
    agentDescription = "Test AI Agent"
    agentCreator = alice
    createdDate = currentTime
    owner = alice
    issuer = orchestrator
    totalSupply = 100.0
    tokenAmount = 100.0
